@model IEnumerable<Student>

<h2>Quản lý Học sinh</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Họ</th>
            <th>Tên</th>
            <th>Lớp</th>
            <th>Email</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.StudentId</td>
                <td>@student.User.FirstName</td>
                <td>@student.User.LastName</td>
                <td>@student.Class.ClassName</td>
                <td>@student.User.Email</td>
                <td>
                    <a asp-action="EditStudent" asp-route-id="@student.StudentId">Sửa</a> |
                    <a asp-action="DeleteStudent" asp-route-id="@student.StudentId">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddStudent" asp-controller="Admin" class="btn btn-primary">Thêm Học sinh mới</a>

<nav>
    <ul class="pagination justify-content-end">
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
    </ul>
</nav>
