@using X.PagedList
@model IPagedList<Student>

<h2 class="mb-4">Quản lý Học sinh</h2>

<div class="d-flex align-items-center mb-3">
    <!-- Nút Thêm Học sinh mới -->
    <a class="btn btn-success me-auto" asp-action="AddStudent" asp-controller="Admin">
        Thêm Học sinh mới
    </a>

    <!-- Thanh phân trang -->
    <nav>
        <ul class="pagination mb-0">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" asp-action="ManageStudents" asp-route-page="@i"
                        asp-route-pageSize="@Model.PageSize">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>STT</th>
            <th>Họ</th>
            <th>Tên</th>
            <th>
                <form method="get" asp-action="ManageStudents" class="d-inline w-auto">
                    <div class="d-flex align-items-center">
                        <label for="sortOrder" class="form-label me-0">Lớp:</label>
                        <select name="sortOrder" id="sortOrder" class="form-select w-auto ms-auto"
                            onchange="this.form.submit()">
                            <option value="" selected="@(ViewBag.CurrentSort == "" ? "selected" : null)">Mặc định
                            </option>
                            <option value="class_asc"
                                selected="@(ViewBag.CurrentSort == "class_asc" ? "selected" : null)">Tăng dần</option>
                            <option value="class_desc"
                                selected="@(ViewBag.CurrentSort == "class_desc" ? "selected" : null)">Giảm dần</option>
                        </select>
                    </div>
                </form>
            </th>
            <th>Email</th>
            <th class="text-center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var student = Model[i];
            <tr>
                <td>@(i + 1 + (Model.PageNumber - 1) * Model.PageSize)</td>
                <td>@student.User.FirstName</td>
                <td>@student.User.LastName</td>
                <td>@student.Class.ClassName</td>
                <td>@student.User.Email</td>
                <td class="text-center">
                    <a class="btn btn-primary" asp-action="EditStudent" asp-route-id="@student.StudentId">Sửa</a>
                    <a class="btn btn-danger" asp-action="DeleteStudent" asp-route-id="@student.StudentId">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

