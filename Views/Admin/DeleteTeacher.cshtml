@model Qltt.Models.Teacher

@{
    ViewData["Title"] = "Xóa giáo viên";
}

<div class="container mt-4">
    <h2 class="text-center text-danger">Bạn có chắc chắn muốn xóa giáo viên này?</h2>
    <div class="card p-4">
        <p><strong>Tên giáo viên:</strong> @Model.LastName</p>
        <p><strong>Email:</strong> @Model.Email</p>

        <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
            <button type="submit" class="btn btn-danger">Xóa</button>
            <a href="@Url.Action("ManageTeachers", "Admin")" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>
