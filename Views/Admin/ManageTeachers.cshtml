@model IEnumerable<Qltt.Models.Teacher>

<h2>Quản lý Giáo viên</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Họ</th>
            <th>Tên</th>
            <th>Email</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.Id</td>
                <td>@teacher.FirstName</td>
                <td>@teacher.LastName</td>
                <td>@teacher.Email</td>
                <td>
                    <a asp-action="EditTeacher" asp-controller="Admin" asp-route-id="@teacher.Id">Sửa</a> |
                    <a asp-action="DeleteTeacher" asp-controller="Admin" asp-route-id="@teacher.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
