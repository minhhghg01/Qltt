@model IEnumerable<Teacher>

<h2>Quản lý Giáo viên</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Họ và tên</th>
            <th>Email</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.TeacherId</td>
                <td>@teacher.User.FirstName @teacher.User.LastName</td>
                <td>@teacher.User.Email</td>
                <td>
                    <a asp-action="EditTeacher" asp-route-id="@teacher.TeacherId">Sửa</a> |
                    <a asp-action="DeleteTeacher" asp-route-id="@teacher.TeacherId">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddTeacher" asp-controller="Admin" class="btn btn-primary">Thêm Giáo viên mới</a>
