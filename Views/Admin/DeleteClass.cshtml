@model Qltt.Models.Class
@{
    ViewData["Title"] = "Xác nhận xóa lớp học";
}

<div class="container mt-4">
    <h2 class="text-center text-danger">Bạn có chắc chắn muốn xóa lớp này?</h2>
    <div class="card p-4">
        <p><strong>Tên lớp:</strong> @Model.ClassName</p>
        <p><strong>Số môn học:</strong> 5</p>
        <p><strong>Số học viên:</strong> 5</p>

        <form method="post" asp-action="DeleteClassConfirmed" asp-route-id="@Model.ClassId">
            <button type="submit" class="btn btn-danger">Xóa</button>
            <a href="@Url.Action("ManageClasses", "Admin")" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>
