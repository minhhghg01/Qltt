@model IEnumerable<Qltt.Models.Class>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <h2 class="mb-4">Danh sách Lớp học</h2>
    <a class="btn btn-success mb-3" asp-controller="Admin" asp-action="CreateClass">Thêm lớp học</a>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col">Tên lớp</th>
                <th scope="col" class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cls in Model)
            {
                <tr>
                    <td>@cls.ClassName</td>
                    <td class="text-center">
                        <a class="btn btn-primary" asp-action="DetailsClass" asp-controller="Admin" asp-route-id="@cls.ClassId">Xem</a>
                        <a class="btn btn-link dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            Thêm
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-action="CreateSubject" asp-controller="Subject">Thêm môn học</a></li>
                            <li><a class="dropdown-item" asp-action="CreateStudent" asp-controller="Student">Thêm học viên</a></li>
                        </ul>
                        <a class="btn btn-danger" asp-action="DeleteClass" asp-controller="Admin" asp-route-id="@cls.ClassId">
                            <i class="bi bi-trash">Xóa</i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav>
        <ul class="pagination justify-content-end">
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
        </ul>
    </nav>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
