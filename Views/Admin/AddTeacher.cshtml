@model Qltt.Models.Teacher

@{
    ViewData["Title"] = "Thêm giáo viên";
}

<div class="container mt-4">
    <h2 class="text-center">Thêm giáo viên mới</h2>
    <div class="card p-4">
        <form method="post" asp-action="Create">
            <div class="form-group">
                <label for="FirstName">Họ:</label>
                <input type="text" class="form-control" id="FirstName" name="FirstName" required>
            </div>
            <div class="form-group mt-3">
                <label for="LastName">Tên:</label>
                <input type="text" class="form-control" id="LastName" name="LastName" required>
            </div>
            <div class="form-group mt-3">
                <label for="Email">Email:</label>
                <input type="email" class="form-control" id="Email" name="Email" required>
            </div>
            <div class="form-group mt-3">
                <label for="ClassId">Mã lớp:</label>
                <input type="number" class="form-control" id="ClassId" name="ClassId" required>
            </div>
            <div class="form-group mt-3">
                <label for="Password">Mật khẩu:</label>
                <input type="password" class="form-control" id="Password" name="Password" required>
            </div>
            <button type="submit" value="Create" class="btn btn-primary mt-4">Thêm</button>
            <a href="@Url.Action("ManageTeachers", "Admin")" class="btn btn-secondary mt-4">Hủy</a>
        </form>
    </div>
</div>
