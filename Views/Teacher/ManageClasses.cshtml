@model IEnumerable<Qltt.Models.Class>

<h2>Quản lý lớp học</h2>

<table class="table">
    <thead>
        <tr>
            <th>ClassID</th>
            <th>ClassName</th>
            <th>TeacherId</th>
            <th>Hành động</th> <!-- Thêm cột cho các hành động -->
        </tr>
    </thead>
    <tbody>
        @foreach (var classItem in Model) // Đổi tên biến để tránh xung đột với từ khóa
        {
            <tr>
                <td>@classItem.ClassId</td> <!-- Sử dụng ClassID -->
                <td>@classItem.ClassName</td>
                <td>@classItem.TeacherId</td> <!-- Sử dụng TeacherID -->
                <td>
                    <a asp-action="EditClass" asp-route-id="@classItem.ClassId">Sửa</a> |
                    <a asp-action="DeleteClass" asp-route-id="@classItem.ClassId">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddClass" class="btn btn-primary">Thêm lớp mới</a>
