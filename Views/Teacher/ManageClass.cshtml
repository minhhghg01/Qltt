@model IEnumerable<Student>
@using X.PagedList

<h2 class="mb-4">Quản lý lớp học</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>STT</th>
            <th>Họ</th>
            <th>Tên</th>
            <th class="text-center">Hành động</th> <!-- Thêm cột cho các hành động -->
        </tr>
    </thead>
    <tbody>
        @foreach (var std in Model) // Đổi tên biến để tránh xung đột với từ khóa
        {
            <tr>
                <td>@(Model.ToList().IndexOf(std) + 1 + (((IPagedList<Student>)Model).PageNumber - 1) * ((IPagedList<Student>)Model).PageSize)</td> <!-- Sử dụng ClassID -->
                <td>@std.User.FirstName</td>
                <td>@std.User.LastName</td>
                <td>
                    <a asp-action="EditClass" asp-route-id="@std.ClassId">Sửa</a> |
                    <a asp-action="DeleteClass" asp-route-id="@std.ClassId">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddClass" class="btn btn-primary">Thêm lớp mới</a>
