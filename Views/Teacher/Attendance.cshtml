@model List<Qltt.Models.Student>
@{
    ViewData["Title"] = "Attendance";
}

<div class="container mt-4">
    <h2>Điểm danh học sinh lớp @ViewBag.ClassName</h2>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>STT</th>
                <th>Họ</th>
                <th>Tên</th>
                <th class="text-center">Tình trạng điểm danh</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@(Model.IndexOf(student) + 1)</td>
                    <td>@student.User.FirstName </td>
                    <td>@student.User.LastName</td>
                    <td class="text-center">@student.Attendances?.Count </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="container mt-4">
    <a class="btn btn-success" asp-action="MarkAttendance" asp-controller="Teacher" method="post">Điểm danh</a>
</div>
