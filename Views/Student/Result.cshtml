@model StudentTest

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="result-container">
                <div class="result-header text-center">
                    <h2>Kết Quả Bài Kiểm Tra</h2>
                </div>

                <div class="score-display">
                    <div class="score-circle @(Model.Score >= 50 ? "pass" : "fail")">
                        <span class="score-number">@(Model.Score.ToString("F0"))</span>
                        <span class="score-label">điểm</span>
                    </div>
                </div>

                <div class="result-details">
                    <div class="detail-item">
                        <i class="fas fa-award @(Model.Score >= 50 ? "text-success" : "text-danger")"></i>
                        <span>Kết quả: @(Model.Score >= 50 ? "Đạt" : "Chưa đạt")</span>
                    </div>
                </div>

                <div class="action-buttons text-center mt-4">
                    <a asp-action="Tests" class="btn btn-primary">
                        <i class="fas fa-redo"></i> Làm lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .result-container {
        background: white;
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .result-header {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 1.5rem;
    }

    .score-display {
        text-align: center;
        margin-bottom: 2rem;
    }

    .score-circle {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        display: inline-block;
        text-align: center;
        line-height: 100px;
        font-size: 1.5rem;
        font-weight: bold;
        margin-right: 20px;
    }

    .score-number {
        font-size: 2rem;
        color: white;
    }

    .score-label {
        font-size: 1rem;
        color: white;
    }

    .pass {
        background-color: #28a745;
    }

    .fail {
        background-color: #dc3545;
    }

    .result-details {
        text-align: center;
        margin-bottom: 2rem;
    }

    .detail-item {
        font-size: 1.2rem;
        color: #2c3e50;
        margin-bottom: 10px;
    }

    .action-buttons {
        text-align: center;
    }

    .btn {
        background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
        color: white;
        border: none;
        padding: 12px 20px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .btn:hover {
        background: linear-gradient(135deg, #2980b9 0%, #2573a7 100%);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(41, 128, 185, 0.3);
    }

    .btn i {
        margin-right: 8px;
    }

    /* Animation khi load trang */
    .result-container {
        animation: slideIn 0.5s ease-out;
    }

</style>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js"></script>
}